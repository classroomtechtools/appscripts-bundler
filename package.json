{
  "name": "svelty-gas-addon-template",
  "version": "1.0.0",
  "license": {
    "type": "MIT",
    "url": "https://opensource.org/licenses/MIT"
  },
  "author": "Adam Morris <classroomtechtools.ctt@gmail.com> (http://classroomtechtools.com/)",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public",

    "deploy": "run-p postprocess clasp:push",

    "postprocess": "run-p build static generate:* stage",
    "static": "cp ./static/* ./staging/",
    "generate:remote": "cp ./remote/* ./postprocess",
    "generate:global": "echo '<style>' > ./staging/globalcss.ejs && cat ./public/global.css >> ./staging/globalcss.ejs && echo '</style>' >> ./staging/globalcss.ejs",
    "generate:css": "echo '<style>' > ./staging/bundlecss.ejs && cat ./public/build/bundle.css >> ./staging/bundlecss.ejs && echo '</style>' >> ./staging/bundlecss.ejs",
    "generate:js": "echo '<script>' > ./staging/bundlejs.ejs && cat ./public/build/bundle.js >> ./staging/bundlejs.ejs && echo '</script>' >> ./staging/bundlejs.ejs",

    "stage": "cd ./staging && ejs-cli index.ejs --out ../postprocess/",

    "clasp:create": "clasp create",
    "clasp:login": "clasp login",
    "clasp:logout": "clasp logout",
    "clasp:logs": "clasp logs",
    "clasp:push": "cd ./postprocess && clasp push"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "rollup": "^2.3.4",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^5.1.2",
    "svelte": "^3.0.0",
    "@google/clasp": "^2.3.0",
    "ejs-cli": "^2.2.0",
    "npm-run-all": "^4.1.5"
  },
  "keywords": [
    "google",
    "appscripts",
    "svelte"
  ],
  "dependencies": {
    "sirv-cli": "^0.4.4"
  }
}
